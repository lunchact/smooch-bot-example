<body >


<div style="height:100%; width:100%;" id="fullScreenChat"> </div>


    <script src="https://cdn.smooch.io/smooch.min.js"></script>

    <script>
        //uncomment to enable fresh chat history - clears data stored in browser
        //localStorage.clear();
        /* -- Initialise Smooch -- */
        Smooch.init({
      	  appToken: '{{appToken}}',
          embedded: true,
      	  emailCaptureEnabled: true,
          customText: {
            headerText: 'How can I be of service?',
            inputPlaceholder: 'Say hi...',
            sendButtonText: 'Send'
          }
        });
        var fullScreenChat = document.getElementById("fullScreenChat");

        /* -- Displaying the main container -- */
        fullScreenChat.style.display = 'block'
        Smooch.render(fullScreenChat);

    </script>
</body>

